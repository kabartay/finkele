{
  "name": "finkele",
  "version": "1.0.0",
  "description": "Climate Risk Intelligence Platform for ESG and Asset Management",
  "main": "index.html",
  "scripts": {
    "start": "live-server public",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss assets/css/style.css -o assets/css/style.min.css",
    "build:js": "terser assets/js/main.js -o assets/js/main.min.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "postcss assets/css/style.css -o assets/css/style.min.css --watch",
    "watch:js": "terser assets/js/main.js -o assets/js/main.min.js --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "climate",
    "ESG",
    "sustainability",
    "risk-management",
    "dashboard"
  ],
  "author": "Finkele Team",
  "license": "GPLv3",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "terser": "^5.24.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kabartay/finkele.git"
  },
  "bugs": {
    "url": "https://github.com/kabartay/finkele/issues"
  },
  "homepage": "https://github.com/kabartay/finkele#readme"
}
